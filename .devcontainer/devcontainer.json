{
	"name": "Azure Dev Tools DevContainer",
	// Specify source container image - Ubuntu 24.04
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
	    "hostRequirements": {
	        "cpus": 4,
	        "memory": "16gb",
	        "storage": "32gb"
	    },
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"humao.rest-client",
				"GitHub.vscode-github-actions",
		                "ms-azuretools.azure-dev",
		                "ms-azuretools.vscode-azurefunctions",
		                "ms-python.python",
				"ms-toolsai.jupyter",
		                "ms-vscode.vscode-node-azure-pack",
				"ms-vscode.azurecli",
				"ms-dotnettools.vscode-dotnet-runtime",
				"ms-azuretools.vscode-bicep",
			        "ms-azuretools.vscode-docker",
			        "ms-vsliveshare.vsliveshare",
				"msazurermtools.azurerm-vscode-tools",
			        "visualstudioexptteam.vscodeintellicode",
				"editorconfig.editorconfig",
				"github.vscode-pull-request-github",
				"github.vscode-github-actions",
				"GitHub.copilot",
				"hashicorp.terraform",
				"VisualStudioExptTeam.vscodeintellicode",
				"esbenp.prettier-vscode",
				"mechatroner.rainbow-csv",
				"redhat.vscode-yaml",
				"hediet.vscode-drawio",
				"PKief.material-icon-theme",
				"GitHub.copilot-chat"
	   		], 
			"settings": {
				// "terminal.integrated.shell.linux": "/bin/zsh"
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				},
				"terminal.integrated.scrollback": 100000000,
				"keyboard.layout": "00000809"
			}
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8080
	],
	// Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode",
	"remoteEnv": {
		"SHELL": "/usr/bin/zsh"
	},
	"containerEnv": {
		"TF_TOKEN_app_terraform_io": "${localEnv:TF_TOKEN_APP_TERRAFORM_IO}",
		"CONTEXT7_API_KEY": "${localEnv:CONTEXT7_API_KEY}"
	},
	"postCreateCommand": "bash -c 'if [ ! -z \"$TF_TOKEN_app_terraform_io\" ]; then mkdir -p ~/.terraform.d && cat > ~/.terraform.d/credentials.tfrc.json <<EOF\n{\n  \"credentials\": {\n    \"app.terraform.io\": {\n      \"token\": \"$TF_TOKEN_app_terraform_io\"\n    }\n  }\n}\nEOF\nchmod 600 ~/.terraform.d/credentials.tfrc.json && echo \"Terraform Cloud credentials configured successfully!\"; else echo \"Warning: TF_TOKEN_APP_TERRAFORM_IO not found. Skipping Terraform Cloud configuration.\"; fi'",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/azure/azure-dev/azd:latest": {},
		"ghcr.io/stuartleeks/dev-container-features/azure-cli-persistence:0": {},
		"ghcr.io/devcontainers/features/docker-in-docker:latest": {},
		"ghcr.io/devcontainers/features/dotnet:1": {},
		"ghcr.io/devcontainers/features/common-utils:latest": {
 			"CONFIGUREZSHASDEFAULTSHELL": true
		},
		"ghcr.io/devcontainers/features/azure-cli:latest": {
			"version": "latest",
			"extensions": "amg,aks-preview,containerapp",
			"installBicep": true
		},
		"ghcr.io/devcontainers/features/python:1": {
			"installTools": true,
			"version": "os-provided"
		},
		"ghcr.io/devcontainers/features/git:latest": {},
		"ghcr.io/devcontainers/features/github-cli:latest": {},
		"ghcr.io/devcontainers/features/terraform:latest": {
			"tflint": true
		},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:latest": {},
		"ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
			"username": "vscode"
		},
		"ghcr.io/devcontainers/features/sshd:1": {
		        "version": "latest"
		},
		"ghcr.io/eitsupi/devcontainer-features/jq-likes:latest": {},
		"ghcr.io/stuartleeks/dev-container-features/shell-history:0": {}
	}
}
